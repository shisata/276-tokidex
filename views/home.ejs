<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <title>Tokidex</title>
  </head>
  <body>
    <link rel="stylesheet" href="style.css">
    <div class="side-nav">
      <a href="https://tokidex.herokuapp.com">Tokidex</a>
      <a href="https://tokidex.herokuapp.com/create">Creation</a>
      <a href="https://tokidex.herokuapp.com/comparison">Comparison</a>
    </div>
    <div class="display-box">
      <h1 class="logo">Tokidex</h1>
      <ul>
        <% results.forEach(function(r) { %>
          <li class="tokimon-box">
            <table>
              <% var initial = r.name; %>
              <td>
                <a href="https://tokidex.herokuapp.com/tokidex/<%= r.id %>">
                  <img class="tokimon-pic" src="" alt='<%= initial[0] %>' width="200px" height="150px">
                </a>
              </td>
              <td>
                <p class="tokimon-index">#<%= r.id %></p>
                <h3 class="tokimon-name"><%= r.name %></h3>
                <ul class="element-list">
                  <li class='<%= r.element1 %>'><%= r.element1 %></li>
                  <li class='<%= r.element2 %>'><%= r.element2 %></li>
                  <li class='<%= r.element3 %>'><%= r.element3 %></li>
                </ul>
              </td>
            </table>
          </li>
          <!-- <form class="" action="https://tokidex.herokuapp.com/tokidex/edit/<%= r.id %>" method="get">
            <input type="submit" name="edit" value="Edit">
          </form>
          <form class="" action="https://tokidex.herokuapp.com/tokidex/delete/<%= r.id %>" method="DELETE">
            <input type="submit" name="delete" value="Delete">
          </form> -->
          <a href="tokidex/edit/<%= r.id %>">Edit</a>
          <a href="tokidex/delete/<%= r.id %>">Delete</a>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
